<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>

    <item android:bottom="0px">

        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#151515"
                android:centerY="0.1"
                android:endColor="#00222222"
                android:startColor="#151515"
                android:type="linear" />
        </shape>
    </item>
</layer-list>