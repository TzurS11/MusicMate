<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/playlistimage"
        android:layout_width="200px"
        android:layout_height="200px"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/songplaceholder" />

    <TextView
        android:id="@+id/playlistname"
        android:layout_width="match_parent"
        app:autoSizeTextType="uniform"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko"
        android:gravity="top"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="20px"
        android:text="Name"
        android:paddingLeft="220px"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/playlistimage"
        app:layout_constraintEnd_toEndOf="@+id/playlistauthor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/playlistauthor"
        app:layout_constraintTop_toTopOf="@+id/playlistimage"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/playlistauthor"
        android:layout_width="match_parent"
        app:autoSizeTextType="uniform"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="@font/amiko"
        android:gravity="bottom"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:paddingLeft="220px"
        android:paddingTop="20px"
        android:text="Author"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/playlistimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toEndOf="@+id/playlistimage"
        app:layout_constraintTop_toTopOf="@+id/playlistimage"
        app:layout_constraintVertical_bias="0.729" />

</androidx.constraintlayout.widget.ConstraintLayout>