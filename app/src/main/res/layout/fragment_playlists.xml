<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    tools:context=".PlaylistsFrag">
    <ListView
        android:id="@+id/playlists"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:background="@drawable/list_border"
        android:divider="#2A000000"
        android:dividerHeight="3dp"
        android:listSelector="@drawable/list_selector"
        android:scrollbars="none"
        android:stackFromBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_conversion_absoluteHeight="548dp"
        tools:layout_conversion_absoluteWidth="291dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="439dp"
        android:layout_height="124dp"
        android:src="@drawable/backgroundcolor"
        app:layout_constraintBottom_toBottomOf="@+id/createPlaylistBtn"
        app:layout_constraintEnd_toEndOf="@+id/createPlaylistBtn"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/createPlaylistBtn"
        app:layout_constraintTop_toTopOf="@+id/createPlaylistBtn"
        app:layout_constraintVertical_bias="0.66" />

    <Button
        android:id="@+id/createPlaylistBtn"
        android:layout_width="282dp"
        android:layout_height="65dp"
        android:background="@drawable/button"
        android:text="Create Playlist"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061"
        tools:layout_conversion_absoluteHeight="61dp"
        tools:layout_conversion_absoluteWidth="244dp" />



</androidx.constraintlayout.widget.ConstraintLayout>