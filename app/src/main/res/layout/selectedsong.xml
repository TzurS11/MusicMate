<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717">

    <ScrollView
        android:background="#171717"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Selected song menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:background="#171717"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/gotoSongLayout"
                android:background="@color/accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gotoSongIV"
                    android:layout_width="180px"
                    android:layout_height="180px"
                    android:src="@drawable/musicnote"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/gotoSongTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/amiko"
                    android:textStyle="bold"
                    android:textSize="60px"

                    android:layout_gravity="center_vertical"
                    android:text="Go to song" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10px"
                android:background="@color/accent"
                android:id="@+id/removeSongLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/removeSongIV"
                    android:layout_width="180px"
                    android:layout_height="180px"
                    android:src="@drawable/bindelete"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/removeSongTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/amiko"
                    android:textSize="60px"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:text="Remove song from playlist" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>